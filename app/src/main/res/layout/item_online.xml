<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">


        <View
            android:id="@+id/viewLines"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#50686868"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            />
        
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tvNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="就这个feel倍儿爽asdfasdfsadf"
            android:maxLength="12"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            />
                
        <ImageView
            android:id="@+id/ivSex"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/icon_nan"
            app:layout_constraintTop_toTopOf="@+id/tvNick"
            app:layout_constraintBottom_toBottomOf="@+id/tvNick"
            app:layout_constraintStart_toEndOf="@+id/tvNick"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"

            />
        <TextView
            android:id="@+id/tvTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="大张伟"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvNick"
            app:layout_constraintTop_toBottomOf="@+id/tvNick"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_solid_colorcc_oval"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/icon_mei"
            android:drawableLeft="@mipmap/icon_mei"
            android:drawablePadding="4dp"
            />
        <TextView
            android:id="@+id/tvTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="大张伟"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tvTag1"
            app:layout_constraintTop_toBottomOf="@+id/tvNick"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_solid_colorcc_oval"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/icon_grade"
            android:drawableLeft="@mipmap/icon_grade"
            android:drawablePadding="4dp"
            />

</android.support.constraint.ConstraintLayout>
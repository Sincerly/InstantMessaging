<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.ysxsoft.imtalk.widget.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:src="@mipmap/img_normal_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈啊" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="ID:14589658"
            android:textColor="@color/hint_text_color" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:src="@mipmap/img_boy" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_oval_bg"
        android:paddingLeft="3dp"
        android:drawableLeft="@mipmap/img_w_masonry"
        android:gravity="center"
        android:text="12"
        android:textColor="@color/white" />


</LinearLayout>
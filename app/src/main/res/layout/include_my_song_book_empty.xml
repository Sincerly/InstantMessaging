<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_music_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/ivEmpty"
        app:layout_constraintEnd_toEndOf="@+id/ivEmpty"
        app:layout_constraintTop_toBottomOf="@+id/ivEmpty"
        android:text="您的曲库暂时没有音乐哦\n快快去添加吧"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8dp"
        android:textSize="12sp"
        android:textColor="@color/color989898"
        />

    <Button
        android:id="@+id/btnAddMusic"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/shape_btn_c9_ff_oval"
        android:text="@string/songbook_addmusic"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpty"
        />
</android.support.constraint.ConstraintLayout>

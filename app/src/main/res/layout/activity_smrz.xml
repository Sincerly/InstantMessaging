<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/top_shape" />

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/smrz_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_top"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/w_themk_shape"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="#ff282828"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="请输入您的真实姓名"
                android:textColor="@color/color333333"
                android:textColorHint="#ff989898"
                android:textSize="13dp" />

            <View style="@style/gray_line_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="身份证号"
                android:textColor="#ff282828"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="请输入您的身份证号"
                android:textColor="@color/color333333"
                android:textColorHint="#ff989898"
                android:digits="0123456789xX"
                android:textSize="13dp" />

            <View style="@style/gray_line_style" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zmxy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/w_themk_shape"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="芝麻信用"
            android:textColor="#ff282828"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="支付宝芝麻信用认证"
            android:textColor="@color/color333333"
            android:textColorHint="#ff989898"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_gray" />

    </RelativeLayout>


    <TextView
        android:id="@+id/btn_sure"
        style="@style/btn_style"
        android:layout_marginTop="60dp"
        android:text="提交" />
</LinearLayout>
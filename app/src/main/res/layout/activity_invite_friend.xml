<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout2" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/invite_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/invite_zi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_margin="16dp"
                android:background="@drawable/w50_itemk_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="共获得金币"
                            android:textColor="#ff282828"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tv_jb_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv1"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="#ffff38c9"
                            android:textSize="28dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="邀请人数"
                            android:textColor="#ff282828"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tv_people_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv2"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="#ffff38c9"
                            android:textSize="28dp" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_look_list"
                    style="@style/btn_style"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:text="查看邀请列表"
                    android:textSize="17dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/w50_itemk_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invitation_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="26dp"
                    android:text="邀请码：698545"
                    android:textColor="#ff282828"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_qrcode"
                    android:layout_width="179dp"
                    android:layout_height="179dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="20dp"
                    android:text="邀请链接："
                    android:textColor="#ff333333"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tv_url"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="38dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/w_themk_radius15"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="http://www.baidu.com/lg/02042162"
                    android:textColor="#ffff38c9"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
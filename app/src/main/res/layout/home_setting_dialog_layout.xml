<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="269dp"
    android:layout_gravity="bottom"
    android:background="@drawable/w_top_radius10_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/img_ht"
        android:drawablePadding="15dp"
        android:text="随机进入嗨聊房" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/img_exit"
        android:drawablePadding="15dp"
        android:text="退出房间" />

    <TextView
        android:id="@+id/tv_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/img_small"
        android:drawablePadding="15dp"
        android:text="最小化房间" />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/img_report"
        android:drawablePadding="15dp"
        android:text="举报房间" />

    <View
      style="@style/gray_line_style"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:text="取消"/>

</LinearLayout>
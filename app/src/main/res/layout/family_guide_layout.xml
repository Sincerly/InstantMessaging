<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_guide_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_guide_bg" />

    <include
        android:id="@+id/ll"
        layout="@layout/w_translation_title_layout" />

    <LinearLayout
        android:id="@+id/ll_bg1"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:layout_margin="15dp"
        android:background="@drawable/w_themk_shape"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"
            android:text="家族说明"
            android:textColor="@color/btn_color"
            android:textSize="18sp" />

        <WebView
            android:id="@+id/web_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bg2"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:layout_margin="15dp"
        android:background="@drawable/w_themk_shape"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_bg1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"
            android:text="常见问题说明"
            android:textColor="@color/btn_color"
            android:textSize="18sp" />

        <WebView
            android:id="@+id/web_content1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
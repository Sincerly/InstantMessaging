<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/NscrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="335dp"
                android:background="@mipmap/img_my_data">

                <include
                    android:id="@+id/ll"
                    layout="@layout/w_translation_title_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ll"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ysxsoft.imtalk.widget.CircleImageView
                        android:id="@+id/img_head"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/img_normal_head" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_nikeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/white"
                            tools:text="点点的摇摇椅" />

                        <ImageView
                            android:id="@+id/img_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:src="@mipmap/img_boy" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="ID:985648"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_mei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cccccc_shape"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toRightOf="@id/tv_tuhao"
                            app:layout_constraintTop_toBottomOf="@id/tv_familly">

                            <ImageView
                                android:id="@+id/img_mei"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:src="@mipmap/img_w_masonry" />

                            <TextView
                                android:id="@+id/tv_mei"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                tools:text="12" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_zs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cccccc_shape"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toRightOf="@id/ll_mei"
                            app:layout_constraintTop_toBottomOf="@id/tv_familly">

                            <ImageView
                                android:id="@+id/img_zs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:src="@mipmap/img_w_masonry" />

                            <TextView
                                android:id="@+id/tv_zs"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                tools:text="12" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_fouce"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_foucs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:text="666" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="关注"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_fance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_fance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:text="888" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="粉丝"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_za_ta"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/img_zd_ta"
                            android:gravity="center"
                            android:text="找到TA"
                            android:textColor="@color/white"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/tv_t_room"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/img_ta_room"
                            android:gravity="center"
                            android:text="TA的房间"
                            android:textColor="@color/white"
                            android:textSize="15sp" />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_data"
                    style="@style/tab_selector"
                    android:text="资料" />

                <TextView
                    android:id="@+id/tv_gift"
                    style="@style/tab_selector"
                    android:text="礼物" />

                <TextView
                    android:id="@+id/tv_car"
                    style="@style/tab_selector"
                    android:text="座驾" />


            </LinearLayout>

            <FrameLayout
                android:id="@+id/fm"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/llshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_fs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_add_fouce"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_shape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_fouce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/img_w_add" />

                <TextView
                    android:id="@+id/tv_fouce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="关注"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/w_themk_radius15"
                android:drawableLeft="@mipmap/img_sx_msg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="私信" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_send_car"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:background="@drawable/w_themk_radius15"
            android:gravity="center"
            android:text="送TA一部座驾"
            android:textColor="@color/btn_color"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
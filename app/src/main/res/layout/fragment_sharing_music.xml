<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MySongBookFragment">


    <include
        android:id="@+id/includeEmpty"
        layout="@layout/include_my_song_book_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_solid_coloreb_oval"
                android:drawableLeft="@mipmap/search_right"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/search_right"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:text="@string/songbook_searchmusic"
                android:textColor="@color/color989898"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginStart="26dp"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/textColor28"
                android:textSize="14sp" />
        </LinearLayout>

        <include layout="@layout/include_onlyrecyclerview" />
    </LinearLayout>

</RelativeLayout>
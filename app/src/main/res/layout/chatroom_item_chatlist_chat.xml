<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chatroom_item_chatlist_iv_avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        tools:src="@drawable/chatroom_user_avatar_02" />

    <TextView
        android:id="@+id/tv_zs_num"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:background="@drawable/gray_oval_bg"
        android:drawableLeft="@mipmap/img_w_masonry"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/chatroom_item_chatlist_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/chatroom_item_chatlist_iv_avatar"
        android:layout_alignTop="@id/chatroom_item_chatlist_iv_avatar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_zs_num"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="周围:" />

    <TextView
        android:id="@+id/chatroom_item_chatlit_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chatroom_item_chatlist_tv_nickname"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:text="你们在玩什么" />

   <!-- android:background="@drawable/chatroom_bg_chatlist_chat"-->
</RelativeLayout>
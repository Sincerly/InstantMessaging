<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chatroom_item_chatlist_iv_avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        tools:src="@drawable/chatroom_user_avatar_02" />

    <LinearLayout
        android:id="@+id/fl_zs_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/gray_oval_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gray_oval_bg"
            android:baselineAligned="false"
            android:gravity="center"
            tools:src="@mipmap/img_w_masonry" />

        <TextView
            android:id="@+id/tv_zs_num"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="12" />

    </LinearLayout>

    <TextView
        android:id="@+id/chatroom_item_chatlist_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/chatroom_item_chatlist_iv_avatar"
        android:layout_alignTop="@id/chatroom_item_chatlist_iv_avatar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/fl_zs_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="周围:" />

    <TextView
        android:id="@+id/chatroom_item_chatlit_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/chatroom_item_chatlist_tv_nickname"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="你们在玩什么" />

    <!-- android:background="@drawable/chatroom_bg_chatlist_chat"-->
</RelativeLayout>
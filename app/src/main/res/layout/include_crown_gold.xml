<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_solid_colorff_top_oval">
        <RelativeLayout
            android:id="@+id/relCrownGold"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_stroke_gold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ivCrownGoldTop"
            android:layout_marginTop="-5dp"
            >
            <ImageView
                android:id="@+id/ivCrownGold"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/ivCrownGoldTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_crown_gold"
            />
        <TextView
            android:id="@+id/tvNo1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relCrownGold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lines="1"
            android:textColor="#FFA917"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tvNo1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNo1Name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tvNo1Zuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNo1ID"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lines="1"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:drawableStart="@mipmap/icon_zuan"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:drawablePadding="4dp"
            android:background="@drawable/shape_solid_colorcc_oval"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO.1"
            android:layout_below="@+id/tvNo1Zuan"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="#FFA917"
            android:layout_marginTop="8dp"
            />
</RelativeLayout>

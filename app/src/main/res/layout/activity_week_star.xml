<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WeekStarActivity">
    <View
        android:id="@+id/viewTop"
        android:layout_width="0dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        />
    <include
        android:id="@+id/include1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/include_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_weekstar_back">
            <!--<include-->
                <!--android:id="@+id/include2"-->
                <!--android:layout_width="346dp"-->
                <!--android:layout_height="175dp"-->
                <!--layout="@layout/item_weekstar_adapter1"/>-->
            <com.ysxsoft.imtalk.widget.MyRecyclerView
                android:id="@+id/recyclerViewGift"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:minHeight="175dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.16"
                android:background="@drawable/shape_solid_colorff_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewGift"
                app:layout_constraintEnd_toEndOf="@id/recyclerViewGift"
                app:layout_constraintTop_toTopOf="@+id/recyclerViewGift"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewGift"
                android:drawableStart="@mipmap/icon_star_white"
                android:drawableEnd="@mipmap/icon_star_white"
                android:text="本周礼物"
                android:background="@drawable/shape_gradient_horizontal"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                />
            <!--<include-->
                <!--android:id="@+id/include3"-->
                <!--android:layout_width="346dp"-->
                <!--android:layout_height="175dp"-->
                <!--layout="@layout/item_weekstar_adapter2"/>-->

            <com.ysxsoft.imtalk.widget.MyRecyclerView
                android:id="@+id/recyclerViewLastWeek"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:minHeight="175dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewGift"
                android:layout_marginTop="28dp"
                android:background="@drawable/shape_solid_colorff_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewLastWeek"
                app:layout_constraintEnd_toEndOf="@id/recyclerViewLastWeek"
                app:layout_constraintTop_toTopOf="@+id/recyclerViewLastWeek"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewLastWeek"
                android:drawableStart="@mipmap/icon_star_white"
                android:drawableEnd="@mipmap/icon_star_white"
                android:text="上周明星"
                android:background="@drawable/shape_gradient_horizontal"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                />
            <include
                android:id="@+id/include4"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewLastWeek"
                android:layout_marginTop="28dp"
                layout="@layout/include_weekstar_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:layout_constraintStart_toStartOf="@+id/include4"
                app:layout_constraintEnd_toEndOf="@id/include4"
                app:layout_constraintTop_toTopOf="@+id/include4"
                app:layout_constraintBottom_toTopOf="@+id/include4"
                android:drawableStart="@mipmap/icon_star_white"
                android:drawableEnd="@mipmap/icon_star_white"
                android:text="本周明星"
                android:background="@drawable/shape_gradient_horizontal"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                />
            <com.ysxsoft.imtalk.widget.MyRecyclerView
                android:id="@+id/recyclerViewWeekStar"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:minHeight="153dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include4"
                android:paddingTop="28dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/shape_solid_colorff_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewWeekStar"
                app:layout_constraintEnd_toEndOf="@id/recyclerViewWeekStar"
                app:layout_constraintTop_toTopOf="@+id/recyclerViewWeekStar"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewWeekStar"
                android:drawableStart="@mipmap/icon_star_white"
                android:drawableEnd="@mipmap/icon_star_white"
                android:text="周星奖励"
                android:background="@drawable/shape_gradient_horizontal"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                />
                
            <TextView
                android:id="@+id/tvGuize"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:minHeight="153dp"
                android:background="@drawable/shape_solid_colorff_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewWeekStar"
                android:layout_marginTop="28dp"
                android:paddingTop="41dp"
                android:paddingBottom="25dp"
                android:paddingStart="18dp"
                android:paddingEnd="19dp"
                android:textSize="15sp"
                android:textColor="@color/textColor28"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:layout_constraintStart_toStartOf="@+id/tvGuize"
                app:layout_constraintEnd_toEndOf="@id/tvGuize"
                app:layout_constraintTop_toTopOf="@+id/tvGuize"
                app:layout_constraintBottom_toTopOf="@+id/tvGuize"
                android:drawableStart="@mipmap/icon_star_white"
                android:drawableEnd="@mipmap/icon_star_white"
                android:text="评选规则"
                android:background="@drawable/shape_gradient_horizontal"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                />

            <!--<include-->
                <!--android:id="@+id/include5"-->
                <!--android:layout_width="346dp"-->
                <!--android:layout_height="175dp"-->
                <!--layout="@layout/include_weekstar_4"/>-->

            <com.ysxsoft.imtalk.widget.MyRecyclerView
                android:id="@+id/recyclerViewNextGift"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:minHeight="153dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGuize"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="75dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/shape_solid_colorff_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewNextGift"
                app:layout_constraintEnd_toEndOf="@id/recyclerViewNextGift"
                app:layout_constraintTop_toTopOf="@+id/recyclerViewNextGift"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewNextGift"
                android:drawableStart="@mipmap/icon_star_white"
                android:drawableEnd="@mipmap/icon_star_white"
                android:text="礼物预告"
                android:background="@drawable/shape_gradient_horizontal"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
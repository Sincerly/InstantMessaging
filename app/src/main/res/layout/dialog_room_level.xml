<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_gravity="bottom">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/include1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_gradient_horizontal_180_top"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/tabTop"
            android:layout_width="200dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabTextColor="#FFFFFF"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/white"
            android:layout_marginTop="10dp"
            />
        <android.support.design.widget.TabLayout
            android:id="@+id/tabBottom"
            android:layout_width="300dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabTop"
            android:background="@drawable/shape_solid_colorff30_oval"
            app:tabBackground="@drawable/tab_bg_selector"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="#FE39CA"
            app:tabTextColor="@color/white"
            app:tabRippleColor="#00000000"
            android:layout_marginTop="10dp"
            />

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tabBottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            layout="@layout/include_dialog_room_level"/>

    </android.support.constraint.ConstraintLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include1" />


</android.support.constraint.ConstraintLayout>
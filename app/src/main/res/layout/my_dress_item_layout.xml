<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/fl_img_bg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/gray_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_tupian"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_normal_head" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="花瓣"
        app:layout_constraintLeft_toRightOf="@id/fl_img_bg" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019-08-20到期"
        android:textColor="@color/hint_text_color"
        android:drawableLeft="@mipmap/img_time"
        android:drawablePadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fl_img_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_gift_name" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:background="@drawable/btn_frame_bg"
        android:gravity="center"
        android:text="使用"
        android:visibility="visible"
        android:textColor="@color/btn_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
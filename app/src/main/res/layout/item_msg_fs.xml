<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <com.ysxsoft.imtalk.widget.CircleImageView
            android:id="@+id/iv_tx"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/img_normal_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_tx"
            android:drawablePadding="10dp"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="我叫蹦蹦啊"
            android:textColor="#ff282828"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/tv_name"
            android:drawablePadding="10dp"
            tools:src="@mipmap/img_boy" />


        <LinearLayout
            android:id="@+id/ll_mei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_sex"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cccccc_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_mei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:src="@mipmap/img_w_masonry" />

            <TextView
                android:id="@+id/tv_m"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ll_mei"
            android:background="@drawable/cccccc_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_zs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:src="@mipmap/img_w_masonry" />

            <TextView
                android:id="@+id/tv_dj"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="12" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_qm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_tx"
            android:text="签名签名签名签名签名签名"
            android:textColor="#ff989898"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_gz"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_dj"
            android:background="@drawable/selector_fs_btn"
            android:gravity="center"
            android:text="互相关注"
            android:textColor="#ffcccccc"
            android:textSize="10sp" />
    </RelativeLayout>


</LinearLayout>